pipeline {
    agent any
    tools {
        maven "MAVEN_HOME"
        jdk "JAVA_HOME"
    }
    stages {
        stage('Fetch code') {
            steps {
                git branch:'vp-rem',url:'https://github.com/hemasanku27/vprofile-project.git' 
            }
        }
        stage('Build') {
            steps{
                sh 'mvn install'
            }
        }
        stage('Test') {
            steps{
                sh 'mvn test'
            }
            post {
                success {
                    echo "Now Archiving"
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        stage('Slack Notification') {
            steps {
                slackSend baseUrl: 'https://hooks.slack.com/services/', 
                channel: '#jenkins-pipeline', 
                color: 'good', 
                message: 'This is testing slack notifications', 
                teamDomain: 'Developing', 
                tokenCredentialId: '56a050df-dfff-40c7-bbf7-27775b9facd4'
                }
           }
    }
}
