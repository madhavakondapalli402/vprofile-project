pipeline {
    agent any
    
    tools {
        maven "MAVEN_HOME"
        jdk "JAVA_HOME"
    }
    environment {
        SNAP_REPO = 'vprofile-snapshot'
        NEXUS_USER = 'admin'
        NEXUS_PASS = 'ZAQ!zaq1'
        RELEASE_REPO = 'vprofile-release'
        CENTRAL_REPO = 'vpro_maven-central'
        NEXUSIP = '10.0.2.179'
        NEXUSPORT = '8081'
        NEXUS_GRP_REPO = 'vprofile-maven-group'
        NEXUS_LOGIN = 'Nexus Cred'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -s settings.xml -DskipTests install'
            }
        }
        post {
            success {
                echo "Now Archiving"
                archiveArtifacts artifacts: '**/*.war'

            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Checkstyle Analysis') {
            steps {
                sh 'mvn checkstyle:checkstyle'
                
            }
        }
    }
}
